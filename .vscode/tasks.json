{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/Programs/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "GamepadUI.cpp",
                "-g",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
                "-ID:/Projects/Libraries/SFML/include",
                "-LD:/Projects/Libraries/SFML/lib",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-lws2_32",
                "-lsfml-system-d",
                "-lsfml-window-d",
                "-lsfml-graphics-d",
                "-lsfml-network-d",
                "-lsfml-main-d"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}